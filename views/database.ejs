<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Database</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/database.css" />
    <link rel="stylesheet" href="/css/database-media.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  </head>
  <body class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
      <div class="dashboard bg-white">
        <div class="d-flex content">
          <div class="school p-4 col-12 col-md-3">
            <div>
              <h2>School</h2>
            </div>
            <ul class="p-0">
              <li class="text-secondary ps-2 mt-4" role="button">Dashboard</li>
              <li class="text-secondary ps-2 mt-4" role="button">Messenger</li>
              <li class="text-secondary ps-2 mt-4" role="button">Calender</li>
              <li class="ps-2 mt-4" role="button">Database</li>
              <li class="text-secondary ps-2 mt-4" role="button">Attendance</li>
              <li class="text-secondary ps-2 mt-4" role="button">Settings</li>
            </ul>
          </div>
          <div class="database col-12 col-md-6 p-3">
            <input
              type="text"
              placeholder="Search for student,teacher..."
              class="col-12 col-md-6 pb-2"
              id="search"
            />
            <span class="line"></span>
            <h2 class="mt-4">Database</h2>
            <ul class="col-12 p-0 mt-4 d-flex align-items-center" id="roles">
              <li class="text-secondary pb-2" role="button" tabindex="1">Students</li>
              <li class="text-secondary ms-3 pb-2" role="button" tabindex="1">Teachers</li>
            </ul>
            <div class="database-content overflow-auto">
              <table id="my-table">
                <tr>
                  <th>Name</th>
                  <th>ID</th>
                  <th>Age</th>
                  <th>Gender</th>
                  <th>Email</th>
                </tr>
              </table>
            </div>
          </div>
          <div class="user-info col-12 col-md-3 p-4">
            <div
              class="d-flex flex-column justify-content-between"
              style="min-height: 600px; display: none !important"
              id="user-info"
            >
              <img
                class="mx-auto img-fluid rounded-circle"
                id="user-img"
                alt="user image"
                style="width: 200px; height: 200px"
              />
              <h2 id="name" class="text-center text-white"></h2>
              <div class="about">
                <h4 class="text-white-50">About</h4>
                <p id="about" class="text-white lead"></p>
              </div>

              <div class="d-flex justify-content-between age-gender ">
                <div>
                  <h5 class="text-white-50">Age</h5>
                  <span id="age" class="text-white"></span>
                </div>
                <div>
                  <h5 class="text-white-50">Gender</h5>
                  <span id="gender" class="text-white"></span>
                </div>
              </div>
              <div class="d-flex justify-content-between address-date">
                <div>
                  <h5 class="text-white-50">Date of birth</h5>
                  <span id="date-of-birth" class="text-white"></span>
                </div>
                <div>
                  <h5 class="text-white-50">Address</h5>
                  <span id="address" class="text-white"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/userView.js"></script>
  </body>
</html>
